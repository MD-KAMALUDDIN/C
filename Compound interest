//To find compound interest 

#include<stdio.h>
#include<math.h>

int main()
{
int p,t,r,n,a,ci;
printf("enter principal amount:");
scanf("%d",&p);
printf("enter time taken:");
scanf("%d",&t);
printf("enter rate of interest:");
scanf("%d",&r);
printf("enter no.of times interest is found in a year:");
scanf("%d",&n);
a=p*(pow((1+r/n),n*t));
ci=a-p;
printf("compound interests:%d",ci);
return 0;
}
