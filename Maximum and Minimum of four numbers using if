//Minimum and Maximum of four numbers using if 

#include<stdio.h>

int main()
{
  int a,b,c,d,max,min;
  printf("Enter any four numbers:");
  scanf("%d%d%d%d",&a,&b,&c,&d);
  max=a;
  if(b>max)
   max=b;
  if(c>max)
   max=c;
  if(d>max)
   max=d;
  min=a;
  if(b<min)
    min=b;
  if(c<min)
    min=c;
  if(d<min)
    min=d;
 printf("Maximum:%d\n Minimum:%d",max,min);
 return 0;
}
